{
    "version": 2,
    "name": "sereko-api",
    "builds": [
        { 
            "src": "api/index.js", 
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { 
            "src": "/(.*)", 
            "dest": "api/index.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Origin", "value": "*" },
                { "key": "Access-Control-Allow-Methods", "value": "*" },
                { "key": "Access-Control-Allow-Headers", "value": "*" }
            ]
        }
    ],
    "env": {
        "NODE_ENV": "production"
    },
    "regions": ["cdg1"]
}
