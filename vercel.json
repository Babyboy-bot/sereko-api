{
    "version": 2,
    "builds": [
        { 
            "src": "server.js", 
            "use": "@vercel/node" 
        }
    ],
    "routes": [
        { 
            "src": "/(.*)", 
            "dest": "server.js" 
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "DATABASE_URL": "@sereko_database_url",
        "FIREBASE_PROJECT_ID": "@firebase_project_id",
        "FIREBASE_PRIVATE_KEY": "@firebase_private_key",
        "JWT_SECRET": "@jwt_secret"
    },
    "regions": ["cdg1"],
    "github": {
        "enabled": true,
        "autoDeploy": true
    }
}
